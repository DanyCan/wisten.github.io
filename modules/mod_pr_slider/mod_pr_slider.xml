<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.2" method="upgrade">
	<name>PR slider</name>
	<creationDate>20/02/2014</creationDate>
	<author>Mehir Mondal</author>
	<authorEmail>webpentagon@pranon.com</authorEmail>
	<authorUrl>http://www.webpentagon.com</authorUrl>
	<copyright>Copyright Info</copyright>
	<license>License Info</license>
	<version>0.1</version>
	<description>PR slider Module for joomla 3.2.X</description>
	<files>
		<filename module="mod_pr_slider">mod_pr_slider.php</filename>
		<filename>mod_pr_slider.xml</filename>
		<filename>index.html</filename>
		<folder>tmpl</folder>
		<folder>css</folder>
		<folder>js</folder>
		<folder>language</folder>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB.mod_pr_slider.ini</language>
		<language tag="en-GB">language/en-GB.mod_pr_slider.sys.ini</language>
	</languages>
		<config>
		
		<fields name="params">
				<fieldset name="style" label="Select Style">
				<field name="choose_style" type="list" default="single_image"
					label="Choose Style" description="choose a style">
					<option value="single_image">Single Image Style</option>
					<option value="multi_images">Multiple Images Style</option>
					<option value="video">Slider Video</option>			
				</field>
				</fieldset>
				
				
				<fieldset name="bgimg" label="Single Image">	
				<field name="sl_image" label="Image 1" type="media"  description="Choose an image." />
				</fieldset>
				<fieldset name="multiimg" label="Multiple Images">	
				<field name="sl_image1" label="Image 1" type="media"  description="Choose an image." />
				<field name="sl_image2" label="Image 2" type="media"  description="Choose an image." />
				<field name="sl_image3" label="Image 3" type="media"  description="Choose an image." />
				<field name="sl_image4" label="Image 4" type="media"  description="Choose an image." />
				<field name="sl_image5" label="Image 5" type="media"  description="Choose an image." />
				<field name="sl_image6" label="Image 6" type="media"  description="Choose an image." />
				<field name="sl_image7" label="Image 7" type="media"  description="Choose an image." />
				<field name="sl_image8" label="Image 8" type="media"  description="Choose an image." />
				</fieldset>
				
				<fieldset name="Editor" label="Text Editor">
				<field name="sl_text1" label ="Slide Text 1" type="editor" width="auto" height="auto" filter="safehtml" />
				<field name="sl_text2" label ="Slide Text 2" type="editor" width="auto" height="auto" filter="safehtml" />
				<field name="sl_text3" label ="Slide Text 3" type="editor" width="auto" height="auto" filter="safehtml" />
				<field name="sl_text4" label ="Slide Text 4" type="editor" width="auto" height="auto" filter="safehtml" />
				<field name="sl_text5" label ="Slide Text 5" type="editor" width="auto" height="auto" filter="safehtml" />
				<field name="sl_text6" label ="Slide Text 6" type="editor" width="auto" height="auto" filter="safehtml" />
				
				<field name="sl_text7" label ="Slider Description" type="editor" width="auto" height="auto" filter="safehtml" />
				</fieldset>
				
				<fieldset name="video" label="Slider Video">
				<field name="video1" type="url" label="Video URL" description="Add Title"/>
				</fieldset>
		
			

		</fields>
	</config>
</extension>